<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_single"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <TextView
            android:id="@+id/tv_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_first_fragment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button_single"
            app:layout_constraintBottom_toBottomOf="@id/button_single"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/button_single"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next" />
        <ImageView
            android:id="@+id/img_single"
            app:layout_constraintTop_toTopOf="@id/button_single"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="300dp"
            android:layout_height="match_parent">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_multi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cs_single"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载多张图片"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button_multi"
            app:layout_constraintBottom_toBottomOf="@id/button_multi"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/button_multi"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_multi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载多张图片" />
        <ImageView
            android:id="@+id/img_multi1"
            app:layout_constraintTop_toTopOf="@id/button_multi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/img_multi2"
            app:layout_constraintTop_toTopOf="@id/img_multi1"
            app:layout_constraintBottom_toBottomOf="@id/img_multi1"
            app:layout_constraintLeft_toRightOf="@id/img_multi1"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/img_multi3"
            app:layout_constraintTop_toTopOf="@id/img_multi1"
            app:layout_constraintBottom_toBottomOf="@id/img_multi1"
            app:layout_constraintLeft_toRightOf="@id/img_multi2"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/img_multi4"
            app:layout_constraintTop_toTopOf="@id/img_multi1"
            app:layout_constraintBottom_toBottomOf="@id/img_multi1"
            app:layout_constraintLeft_toRightOf="@id/img_multi3"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/img_multi5"
            app:layout_constraintTop_toBottomOf="@id/img_multi1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/img_multi6"
            app:layout_constraintTop_toTopOf="@id/img_multi5"
            app:layout_constraintBottom_toBottomOf="@id/img_multi5"
            app:layout_constraintLeft_toRightOf="@id/img_multi5"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/img_multi7"
            app:layout_constraintTop_toTopOf="@id/img_multi5"
            app:layout_constraintBottom_toBottomOf="@id/img_multi5"
            app:layout_constraintLeft_toRightOf="@id/img_multi6"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <ImageView
            android:id="@+id/img_multi8"
            app:layout_constraintTop_toTopOf="@id/img_multi5"
            app:layout_constraintBottom_toBottomOf="@id/img_multi5"
            app:layout_constraintLeft_toRightOf="@id/img_multi7"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>